[alias]
    br = branch
    # one-line log
    l = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short

    a = add
    ap = add -p
    c = commit --verbose
    ca = commit -a --verbose
    cm = commit -m
    cam = commit -a -m
    m = commit --amend --verbose
    
    d = diff
    ds = diff --stat
    dc = diff --cached

    st = status
    s = status -s
    co = checkout
    cob = checkout -b
    # list branches sorted by last modified
    b = "!git for-each-ref --sort='-authordate' --format='%(authordate)%09%(objectname:short)%09%(refname)' refs/heads | sed -e 's-refs/heads/--'"

    # list aliases
    la = "!git config -l | grep alias | cut -c 7-"

    # Restore working tree files (discard changes)
    rs = restore
    
    # Restore staged files (unstage changes)
    rss = restore --staged

    # Reset
    rst = reset
    
    # Soft reset (keep changes staged, undo commit)
    rsts = reset --soft
    
    # Hard reset (discard all changes - DANGEROUS)
    rsth = reset --hard
    
    gh = !git config user.name "trankhanh040147" && git config user.email "trankhanh040147@gmail.com" && echo "Switched"
[pull]
	rebase = true
[init]
	defaultBranch = master
