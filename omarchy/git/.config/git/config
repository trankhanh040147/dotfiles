[alias]
    br = branch
    # one-line log
    l = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short

    a = add
    ap = add -p
    c = commit --verbose
    ca = commit -a --verbose
    cm = commit -m
    cam = commit -a -m
    m = commit --amend --verbose
    
    d = diff
    ds = diff --stat
    dc = diff --cached

    st = status
    s = status -s
    co = checkout
    cob = checkout -b
    # list branches sorted by last modified
    b = "!git for-each-ref --sort='-authordate' --format='%(authordate)%09%(objectname:short)%09%(refname)' refs/heads | sed -e 's-refs/heads/--'"

    # list aliases
    la = "!git config -l | grep alias | cut -c 7-"

    # Restore working tree files (discard changes)
    rs = restore
    
    # Restore staged files (unstage changes)
    rss = restore --staged

    # Reset
    rst = reset
    
    # Soft reset (keep changes staged, undo commit)
    rsts = reset --soft
    
    # Hard reset (discard all changes - DANGEROUS)
    rsth = reset --hard

    # Switch to sonsonha
    as-son = "!f() { \
        git config --local user.name 'sonsonha' && \
        git config --local user.email 'sonha2002.12@gmail.com' && \
        echo 'Switched local config to sonsonha'; \
    }; f"

    # Switch to trankhanh
    as-tran = "!f() { \
        git config --local user.name 'trankhanh040147' && \
        git config --local user.email 'trankhanh040147@gmail.com' && \
        echo 'Switched local config to trankhanh'; \
    }; f"
[pull]
	rebase = true
[init]
	defaultBranch = master
[user]
	email = trankhanh040147@gmail.com
	name = trankhanh040147
[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
